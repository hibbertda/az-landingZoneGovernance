{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "scopedMG": {
            "type": "string",
            "metadata": {
                "description": "Scoped management group"
            }
        },
        "roleDefinitionIds": {
            "type": "string",
            "metadata": {
                "description": "(array) of disallowed role ids"
            }
        },
        "policyEffect": {
            "type": "string",
            "metadata": {
                "description": "description"
            },
            "allowedValues": [
                "deny",
                "disabled",
                "audit"
            ],
            "defaultValue": "deny"
        }
    },
    "variables": {
        "scopedMGId": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('scopedMG'))]",
        "policyDefinition": "pol-disallowedRoleIDs"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "name": "[variables('policyDefinition')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "policyType": "Custom",
                "mode": "All",
                "parameters": {
                    "roledefinitionIds": {
                        "type": "array",
                        "metadata": {
                            "description": "The list of role definition Ids",
                            "displayName": "Disallowed Role Definitions"                            
                        }
                    }
                },
                "policyRule": {
                    "if": {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Authorization/roleAssignments"
                            },
                            {
                                "not": {
                                    "field": "Microsoft.Authorization/roleAssignments/roleDefinitionId",
                                    "in": "[parameters('roleDefinitionIds')]"
                                }
                            }
                        ]
                    },
                    "then": {
                        "effect": "[parameters('policyEffect')]"
                    }                                       
                }
            }
        }
    ],
    "outputs": {}
}